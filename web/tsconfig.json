{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],                // continua valendo para coisas dentro de src/
      "@/backend/*": ["./src/app/(backend)/*"],
      "@/frontend/*": ["./src/app/(frontend)/*"],

      "@components/*": ["components/*"], // ðŸ‘ˆ aponta para web/components
      "@data/*": ["data/*"]              // ðŸ‘ˆ aponta para web/data
    }
  },
  "include": [
  "next-env.d.ts",
  "**/*.ts",
  "**/*.tsx",
  "**/*.js",
  "**/*.jsx",
  ".next/types/**/*.ts"
, "data/produtos"],
  "exclude": ["node_modules"]
}
